# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /		controllers.base.Application.homePage()

# Authentication
POST	/api/session				controllers.base.Application.keepAlive()
DELETE	/api/session				controllers.base.Application.logout()
POST	/api/session/login			controllers.base.Application.login()

GET		/view/session/login				controllers.base.Application.loginPage()
GET		/view/session/logout			controllers.base.Application.logoutPage()

# Collections
GET		/api/collections					controllers.CollectionsController.list()
GET		/api/collections/:collection		controllers.CollectionsController.get(collection: String)
DELETE	/api/collections/:collection		controllers.CollectionsController.delete(collection: String)
GET		/view/collections/:collection/form	controllers.CollectionsController.detailsForm(collection: String)

# Documents
GET		/api/collections/:collection/documents				controllers.DocumentsController.list(collection: String)
GET		/api/collections/:collection/documents/:document	controllers.DocumentsController.get(collection: String, document: String)

# Modules
GET		/api/modules/options/:input			controllers.ModuleController.options(input: String)
GET		/view/modules						controllers.ModuleController.landingPage()

# Corpus module
GET		/view/modules/corpora					controllers.modules.CorpusModule.modulePage(partial: Boolean ?= false)

# Opinions (special corpus)
POST	/api/modules/opinions								controllers.modules.CorpusModule.create()
POST	/api/modules/opinions/:corpus						controllers.modules.CorpusModule.update(corpus: String)
POST	/api/modules/opinions/:corpus/documents				controllers.modules.CorpusModule.addDocument(corpus: String)
POST	/api/modules/opinions/:corpus/documents/:document	controllers.modules.CorpusModule.updateDocument(corpus: String, document: String)
DELETE	/api/modules/opinions/:corpus/documents/:document	controllers.modules.CorpusModule.deleteDocument(corpus: String, document: String)

# Aspect lexicon builder module
POST	/api/modules/lexica								controllers.modules.AspectLexBuilder.create(corpus = null)
POST	/api/modules/corpora/:corpus/lexica				controllers.modules.AspectLexBuilder.create(corpus: String)
POST	/api/modules/lexica/:lexicon					controllers.modules.AspectLexBuilder.update(corpus = null, lexicon: String)
POST	/api/modules/corpora/:corpus/lexica/:lexicon	controllers.modules.AspectLexBuilder.update(corpus: String, lexicon: String)

GET		/api/modules/corpora/:corpus/lexica/:lexicon/documents/next		controllers.modules.AspectLexBuilder.getDocument(corpus: String, lexicon: String, emphasis: String ?= null, rank: Long = -1)
GET		/api/modules/corpora/:corpus/lexica/:lexicon/documents/:rank	controllers.modules.AspectLexBuilder.getDocument(corpus: String, lexicon: String, emphasis: String ?= null, rank: Long)
POST	/api/modules/corpora/:corpus/lexica/:lexicon/documents/next		controllers.modules.AspectLexBuilder.seeDocument(corpus: String, lexicon: String, emphasis: String ?= null, rank: Long = -1)
POST	/api/modules/corpora/:corpus/lexica/:lexicon/documents/:rank	controllers.modules.AspectLexBuilder.seeDocument(corpus: String, lexicon: String, emphasis: String ?= null, rank: Long)

POST	/api/modules/lexica/:lexicon/aspects			controllers.modules.AspectLexBuilder.addAspect(lexicon: String)
POST	/api/modules/lexica/aspects/:aspect				controllers.modules.AspectLexBuilder.updateAspect(lexicon = null, aspect: String)
POST	/api/modules/lexica/:lexicon/aspects/:aspect	controllers.modules.AspectLexBuilder.updateAspect(lexicon: String, aspect: String)
DELETE	/api/modules/lexica/aspects/:aspect				controllers.modules.AspectLexBuilder.deleteAspect(lexicon = null, aspect: String)
DELETE	/api/modules/lexica/:lexicon/aspects/:aspect	controllers.modules.AspectLexBuilder.deleteAspect(lexicon: String, aspect: String)

GET		/api/modules/lexica/aspects/keywords/:expression			controllers.modules.AspectLexBuilder.getExpression(aspect = null, expression: String)
GET		/api/modules/lexica/aspects/:aspect/keywords/:expression	controllers.modules.AspectLexBuilder.getExpression(aspect: String, expression: String)
GET		/api/modules/lexica/aspects/:aspect/keywords				controllers.modules.AspectLexBuilder.getExpressions(aspect: String)
POST	/api/modules/lexica/aspects/keywords/:expression			controllers.modules.AspectLexBuilder.updateExpression(aspect = null, expression: String)
POST	/api/modules/lexica/aspects/:aspect/keywords/:expression	controllers.modules.AspectLexBuilder.updateExpression(aspect: String, expression: String)
POST	/api/modules/lexica/aspects/:aspect/keywords				controllers.modules.AspectLexBuilder.addExpression(aspect: String)
DELETE	/api/modules/lexica/aspects/keywords/:expression			controllers.modules.AspectLexBuilder.deleteExpression(aspect = null, expression: String)
DELETE	/api/modules/lexica/aspects/:aspect/keywords/:expression	controllers.modules.AspectLexBuilder.deleteExpression(aspect: String, expression: String)

GET		/view/modules/lexica/builder							controllers.modules.AspectLexBuilder.modulePage(corpus = null, lexicon = null, partial: Boolean ?= false)
GET		/view/modules/lexica/:lexicon/builder					controllers.modules.AspectLexBuilder.modulePage(corpus = null, lexicon: String, partial: Boolean ?= false)
GET		/view/modules/corpora/:corpus/lexica/builder			controllers.modules.AspectLexBuilder.modulePage(corpus: String, lexicon = null, partial: Boolean ?= false)
GET		/view/modules/corpora/:corpus/lexica/:lexicon/builder	controllers.modules.AspectLexBuilder.modulePage(corpus: String, lexicon: String, partial: Boolean ?= false)

GET		/view/modules/corpora/:corpus/lexica/:lexicon/documents	controllers.modules.AspectLexBuilder.documentsView(corpus: String, lexicon: String)
GET		/view/modules/lexica/:lexicon							controllers.modules.AspectLexBuilder.lexiconView(lexicon: String)

# Corpus reduction module
GET		/view/modules/reduction/:corpus		controllers.modules.SetCoverModule.modulePage(corpus: String, partial: Boolean ?= false)

# Support queries
GET		/api/support/languages		controllers.CollectionsController.supportedLanguages()

# Map static resources from the /public folder to the /assets URL path
GET    /assets/javascripts/routes      			controllers.base.Application.javascriptRoutes()
GET     /assets/*file               			controllers.Assets.at(path="/public", file)