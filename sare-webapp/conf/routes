# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           			controllers.base.Application.index()

# Authentication
POST	/api/session				controllers.base.Application.keepAlive()
POST	/api/session/login			controllers.base.Application.authenticate()

GET		/session/login				controllers.base.Application.login()
GET		/session/logout				controllers.base.Application.logout()

# Collections
GET		/api/collections						controllers.CollectionsController.list()
POST	/api/collections						controllers.CollectionsController.create()
GET		/api/collections/:collection			controllers.CollectionsController.get(collection: String)
POST	/api/collections/:collection			controllers.CollectionsController.update(collection: String)
DELETE	/api/collections/:collection			controllers.CollectionsController.delete(collection: String)

# Documents
GET		/api/collections/:collection/documents				controllers.DocumentsController.list(collection: String)
POST	/api/collections/:collection/documents				controllers.DocumentsController.add(collection: String)
GET		/api/collections/:collection/documents/:document	controllers.DocumentsController.get(collection: String, document: String)
POST	/api/collections/:collection/documents/:document	controllers.DocumentsController.update(collection: String, document: String)
DELETE	/api/collections/:collection/documents/:document	controllers.DocumentsController.delete(collection: String, document: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               			controllers.Assets.at(path="/public", file)
