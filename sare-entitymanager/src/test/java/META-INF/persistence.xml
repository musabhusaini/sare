<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="edu.sabanciuniv.sentilab.sare.tests.data">
    	<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>edu.sabanciuniv.sentilab.sare.models.base.PersistentObject</class>
		
		<class>edu.sabanciuniv.sentilab.sare.models.document.base.PersistentDocument</class>
		<class>edu.sabanciuniv.sentilab.sare.models.documentStore.base.DocumentStoreBase</class>
		
		<class>edu.sabanciuniv.sentilab.sare.models.document.OpinionDocument</class>
		<class>edu.sabanciuniv.sentilab.sare.models.documentStore.OpinionCorpus</class>
		
		<class>edu.sabanciuniv.sentilab.sare.models.document.SetCoverDocument</class>
		<class>edu.sabanciuniv.sentilab.sare.models.documentStore.DocumentSetCover</class>
		
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/sare_test_db" />
            <property name="javax.persistence.jdbc.user" value="java_user" />
            <property name="javax.persistence.jdbc.password" value="java_user_pwd" />

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />
        </properties>
    </persistence-unit>
</persistence>